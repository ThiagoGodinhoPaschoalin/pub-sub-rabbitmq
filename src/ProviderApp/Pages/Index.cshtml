@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<p>
    <a asp-page="PersonPages/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonEntity[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonEntity[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonEntity[0].CanItBeShared)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PersonEntity)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CanItBeShared)
                </td>
                <td>
                    <a asp-page="./PersonPages/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./PersonPages/Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./PersonPages/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>