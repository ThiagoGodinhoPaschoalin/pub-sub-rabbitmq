@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonEntity[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonEntity[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonEntity[0].CanItBeShared)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PersonEntity)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CanItBeShared)
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>